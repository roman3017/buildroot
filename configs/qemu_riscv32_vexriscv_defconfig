# Target Options
BR2_RISCV_ISA_RVI=y
BR2_RISCV_ISA_RVM=y
BR2_RISCV_ISA_RVA=y
# BR2_riscv_g is not set
BR2_riscv_custom=y
BR2_RISCV_ISA_CUSTOM_RVM=y

# Architecture
BR2_riscv=y
BR2_RISCV_32=y

# System
BR2_SYSTEM_DHCP=""
